<html>
    <body>
        <div class="erros">
            <% if(errosValidacao){ %>
                <ul>
                    <% for(i=0;i<errosValidacao.length;i++){ %>
                        <li><%= errosValidacao[i].param %> - <%= errosValidacao[i].msg %></li>
                    <% } %>
                </ul>
            <% } %>
        </div>
        <form action="/produtos" method="post">
            <div>
                <label for="titulo">Título do livro</label>
                <input type="text" name="titulo" value="<%= produto.titulo %>" placeholder="coloque o título do livro"/>
            </div>
            <div>
                <label for="preco">Preço</label>
                <input type="text" name="preco" value="<%= produto.preco %>" placeholder="150.25"/>
            </div>
            <div>
                <label for="descricao">Descrição</label>
                <textarea cols="20" rows="10" name="descricao" placeholder="fale sobre o livro"><%= produto.descricao %></textarea>
            </div>
            <input type="submit" value="gravar" />
        </form>
    </body>
</html>